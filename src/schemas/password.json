{
    
    "$id": "http://ciam.nestle.com/schemas/password.json#", 
	"title": "password",
	"description" : "CIAM password schema",
	"type": "object", 
    "properties":{
        
        "hash":  {"type": "string"},
        "hashSettings": {
            "type": "object", 
            "properties":{
                "salt": {"type": "string"},
                "algorithm": {"type": "string",  "enum":["custom"]},
                "url": {"type": "string", "format":"uri"}
            },
            "required":["salt","algorithm","url"]
        }
    },
    "required":["hash","hashSettings"]
}